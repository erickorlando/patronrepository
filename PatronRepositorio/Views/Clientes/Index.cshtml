@model IEnumerable<PatronRepositorio.Entities.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Crear Cliente</a>
</p>
<table class="table table-primary table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorreoElectronico)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id= item.Id  }) |
                    @Html.ActionLink("Details", "Details", new { id= item.Id  }) |
                    @Html.ActionLink("Delete", "Delete", new { id= item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>
